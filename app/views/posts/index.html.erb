<h1>Posts</h1>
<div>
<% @posts.each do |post| %>
<div>
<%= post.title %>
</div>
<div>
<%= post.post %>
</div>
<div>
<%= link_to 'View', post_path(post) %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %>
</div>
<%end%>
</div>
<%= link_to 'New Post', new_post_path %>
