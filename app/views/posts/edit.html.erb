<h1>Editing Post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :post %><br>
    <%= f.text_area :post %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', posts_path %>